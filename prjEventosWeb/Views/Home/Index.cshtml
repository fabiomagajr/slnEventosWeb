@{
    ViewData["Title"] = "Home";
}

@section Hero {
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 hero-text">
                    <h1>Descubra os Melhores Eventos Acadêmicos</h1>
                    <p>Encontre palestras, workshops, conferências e muito mais. Conecte-se com sua comunidade acadêmica.</p>
                    <a href="#" class="btn btn-light btn-lg">Explorar Eventos</a>
                </div>
                <div class="col-lg-6 d-none d-lg-block">
                    <!-- Imagem ilustrativa (placeholder) - você adicionará depois -->
                    <img src="/img/eventos.jpg" alt="Eventos acadêmicos" class="img-fluid rounded shadow" />
                </div>
            </div>
        </div>
    </div>
}

<!-- Seção de Categorias -->
<section class="category-container">
    <div class="container">
        <div class="text-center mb-5">
            <h2>Explore por Categoria</h2>
            <p class="lead">Encontre o tipo de evento que você está procurando</p>
        </div>
        <div class="row g-4">
            <div class="col-md-3 col-6">
                <a href="#" class="text-decoration-none">
                    <div class="category-item">
                        <div class="category-icon">
                            <i class="fas fa-microphone"></i>
                        </div>
                        <h5 class="category-title">Palestras</h5>
                        <p>Assista apresentações de especialistas</p>
                    </div>
                </a>
            </div>
            <div class="col-md-3 col-6">
                <a href="#" class="text-decoration-none">
                    <div class="category-item">
                        <div class="category-icon">
                            <i class="fas fa-laptop-code"></i>
                        </div>
                        <h5 class="category-title">Workshops</h5>
                        <p>Aprenda novas habilidades na prática</p>
                    </div>
                </a>
            </div>
            <div class="col-md-3 col-6">
                <a href="#" class="text-decoration-none">
                    <div class="category-item">
                        <div class="category-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h5 class="category-title">Conferências</h5>
                        <p>Participe de eventos de grande porte</p>
                    </div>
                </a>
            </div>
            <div class="col-md-3 col-6">
                <a href="#" class="text-decoration-none">
                    <div class="category-item">
                        <div class="category-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <h5 class="category-title">Feiras</h5>
                        <p>Explore projetos e pesquisas</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Seção de Eventos em Destaque -->
<section>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Eventos em Destaque</h2>
            <a href="#" class="btn btn-outline-primary">Ver Todos</a>
        </div>
        <div class="row g-4">
            <!-- Evento 1 -->
            <div class="col-lg-4 col-md-6">
                <div class="event-card">
                    <div class="event-img-container">
                        <!-- Imagem ilustrativa (placeholder) - você adicionará depois -->
                        <img src="/img/tecnologia.png" alt="Nome do evento" />
                        <div class="event-overlay">
                            <a href="#" class="btn btn-light position-absolute bottom-0 end-0 m-3">Detalhes</a>
                        </div>
                    </div>
                    <div class="event-details">
                        <h3 class="event-title">Semana de Tecnologia e Inovação</h3>
                        <div class="event-date mb-2">
                            <i class="far fa-calendar-alt me-2"></i> 15-20 Maio, 2025
                        </div>
                        <div class="mb-2">
                            <i class="fas fa-map-marker-alt me-2 text-muted"></i> Centro de Convenções
                        </div>
                        <p class="event-description">Uma semana inteira dedicada às últimas tendências em tecnologia e inovação no ambiente acadêmico.</p>
                        <a href="#" class="btn btn-event">Inscrever-se</a>
                    </div>
                </div>
            </div>
            <!-- Evento 2 -->
            <div class="col-lg-4 col-md-6">
                <div class="event-card">
                    <div class="event-img-container">
                        <!-- Imagem ilustrativa (placeholder) - você adicionará depois -->
                        <img src="/img/metodologia.png" alt="Nome do evento" />
                        <div class="event-overlay">
                            <a href="#" class="btn btn-light position-absolute bottom-0 end-0 m-3">Detalhes</a>
                        </div>
                    </div>
                    <div class="event-details">
                        <h3 class="event-title">Workshop de Metodologia Científica</h3>
                        <div class="event-date mb-2">
                            <i class="far fa-calendar-alt me-2"></i> 10 Junho, 2025
                        </div>
                        <div class="mb-2">
                            <i class="fas fa-map-marker-alt me-2 text-muted"></i> Auditório Principal
                        </div>
                        <p class="event-description">Aprenda técnicas avançadas de pesquisa e metodologia científica com especialistas renomados.</p>
                        <a href="#" class="btn btn-event">Inscrever-se</a>
                    </div>
                </div>
            </div>
            <!-- Evento 3 -->
            <div class="col-lg-4 col-md-6">
                <div class="event-card">
                    <div class="event-img-container">
                        <!-- Imagem ilustrativa (placeholder) - você adicionará depois -->
                        <img src="/img/sustentabilidade.png" alt="Nome do evento" />
                        <div class="event-overlay">
                            <a href="#" class="btn btn-light position-absolute bottom-0 end-0 m-3">Detalhes</a>
                        </div>
                    </div>
                    <div class="event-details">
                        <h3 class="event-title">Conferência de Sustentabilidade</h3>
                        <div class="event-date mb-2">
                            <i class="far fa-calendar-alt me-2"></i> 25 Junho, 2025
                        </div>
                        <div class="mb-2">
                            <i class="fas fa-map-marker-alt me-2 text-muted"></i> Espaço Verde
                        </div>
                        <p class="event-description">Discussões sobre sustentabilidade e meio ambiente no contexto acadêmico e profissional.</p>
                        <a href="#" class="btn btn-event">Inscrever-se</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Seção Newsletter -->
<section class="newsletter-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h3 class="mb-4">Inscreva-se na nossa Newsletter</h3>
                <p class="mb-4">Receba as últimas novidades sobre eventos acadêmicos diretamente no seu email</p>
                <div class="newsletter-form">
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="Seu endereço de e-mail" aria-label="Endereço de email">
                        <button class="btn" type="button">Inscrever-se</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Seção de Próximos Eventos -->
<section class="mt-5">
    <div class="container">
        <h2 class="mb-4">Próximos Eventos</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3 border-0 shadow-sm">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <!-- Imagem ilustrativa (placeholder) - você adicionará depois -->
                            <img src="/img/ia.png" class="img-fluid rounded-start h-100 object-fit-cover" alt="Evento">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Palestra sobre Inteligência Artificial</h5>
                                <div class="text-primary mb-2"><i class="far fa-calendar-alt me-2"></i>01 Julho, 2025</div>
                                <p class="card-text">Uma visão geral sobre os avanços recentes em IA e suas aplicações.</p>
                                <a href="#" class="text-primary fw-bold">Saiba mais <i class="fas fa-arrow-right ms-1"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3 border-0 shadow-sm">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <!-- Imagem ilustrativa (placeholder) - você adicionará depois -->
                            <img src="/img/oportunidades.jpg" class="img-fluid rounded-start h-100 object-fit-cover" alt="Evento">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Feira de Oportunidades Acadêmicas</h5>
                                <div class="text-primary mb-2"><i class="far fa-calendar-alt me-2"></i>15 Julho, 2025</div>
                                <p class="card-text">Conheça programas de intercâmbio, bolsas e oportunidades de pesquisa.</p>
                                <a href="#" class="text-primary fw-bold">Saiba mais <i class="fas fa-arrow-right ms-1"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>